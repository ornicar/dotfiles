{
  "java.home": "/usr/lib/jvm/java-17-openjdk/",
  "metals.javaHome": "/usr/lib/jvm/java-17-openjdk/",
  "metals.enable": true,
  "metals.serverVersion": "0.11.2",
  "list.source.files.excludePatterns": ["**/node_modules/**", "**/node_modules/**/.*", "**/node_modules/**/.*/**"],
  "coc.source.file.ignorePatterns": ["**/node_modules/**", "**/node_modules/**/.*", "**/node_modules/**/.*/**"],
  "coc.preferences.formatOnSaveFiletypes": [
    "scala",
    "css",
    "markdown",
    "scss",
    "javascript",
    "typescript",
    "yaml",
    "json",
    "rust"
  ],
  "python.linting.mypyEnabled": true,
  "codeLens.enable": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.lens.methodReferences": true
}
